<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FavorilerActivity"
    android:id="@+id/favoriler_layout.RootView">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favoriler_layout.recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/favoriler_layout.button_layout"
        />
    <LinearLayout
        android:id="@+id/favoriler_layout.button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/favoriler_layout.satinAl"
                android:text="SAtın Al"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/favoriler_layout.TumunuTemizle"
                android:text="Tümünü Temizle"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>